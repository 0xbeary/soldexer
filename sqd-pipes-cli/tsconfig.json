{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",           
    "moduleResolution": "nodenext", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates"]
}