{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["es2021"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates"]
}
